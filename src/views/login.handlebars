<main class="main_session">
    <div class="login_box">
        <h1 class="title_login">Login</h1>
        <form id="loginForm" action="/api/sessions/login" method="POST" class="form_session">
            <div class="section_box">
                <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="section_box">
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit">Sign in</button>
            <p class="message" id="message"></p>
            <p class="text_box_account">Don't have an account? <a href="/register" class="register_string">Sign Up</a></p>
        </form>
    </div>
</main>
<script src="/static/js/login.js"></script>
