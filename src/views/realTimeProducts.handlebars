{{>navbar}}

<div class="container">
    <h1 class="display-4">Products:</h1>

    <table id="products-table" class="table table-striped table-bordered">
        <tr>
            <th>Id:</th>
            <th>Título:</th>
            <th>Descripción:</th>
            <th>Código:</th>
            <th>Precio:</th>
            <th>Estado:</th>
            <th>Stock:</th>
            <th>Categoría:</th>
            <th>Imágenes:</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td>{{this.price}}</td>
            <td>{{this.status}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>
            <td>{{this.thumbnail}}</td>
        </tr>
        {{/each}}
    </table>

    <div class="row">
        <div class="col-md-6">
            <form id="new-Product" action="/realtimeproducts" method="post">
                <h2 class="h4">Add Product:</h2>

                <div class="form-group mb-1">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title">
                </div>

                <div class="form-group mb-1">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description" id="description">
                </div>

                <div class="form-group mb-1">
                    <label for="code">Code</label>
                    <input type="text" class="form-control" name="code" id="code">
                </div>

                <div class="form-group mb-1">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" name="price" id="price">
                </div>

                <div class="form-group mb-1">
                    <label for="status">Status</label>
                    <select class="form-control" name="status" id="status">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <div class="form-group mb-1">
                    <label for="stock">Stock</label>
                    <input type="number" class="form-control" name="stock" id="stock">
                </div>

                <div class="form-group mb-1">
                    <label for="category">Category</label>
                    <input type="text" class="form-control" name="category" id="category">
                </div>

                <div class="form-group mb-1">
                    <label for="thumbnail">Thumbnail</label>
                    <input type="text" class="form-control" name="thumbnail" id="thumbnail">
                </div>

                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
        <div class="col-md-6">
            <form id="delete-product">
                <h2 class="h4">Delete product</h2>

                <div class="form-group">
                    <label for="id">Id</label>
                    <input type="text" class="form-control" name="id" id="id">
                </div>

                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <div class="responsive-container" id="responsive-container"></div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/realTimeProductsList.js"></script>
